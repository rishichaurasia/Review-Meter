<div class="row mb-5" id="reviews">
    <div class="col-sm-12">
        <hr>
        <div class="d-flex flex-row justify-content-between">
            <h2 class="display-6">Reviews:</h2>
            {{#if user}}
            <button class="btn btn-dark mb-3" type="button" data-bs-toggle="modal" data-bs-target="#post-review">Post
                Review</button>
            {{/if}}
        </div>
    </div>
    <div id="review-container">
        {{#each reviews}}
        <div id="review-{{this._id}}" class="card bg-dark my-2">
            <div class="card-body">
                <div class="d-flex flex-row justify-content-between">
                    <div class="d-flex flex-column">
                        <div class="d-flex flex-row align-items-center">
                            <h4 class="card-title">{{this.title}}&ensp;</h4>
                            <h6 class="card-subtitle text-muted">{{this.createdAt}}</h6>
                        </div>
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">{{this.userId.name}}</h6>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <h4 class="d-flex flex-row justify-content-end text-nowrap">{{this.rating}} / 5</h4>
                        {{#ifequal ../user._id this.userId._id}}
                        <a class="delete-review-button" href="/review/{{this._id}}"><button
                                class="btn btn-light">Delete</button></a>
                        {{/ifequal}}
                    </div>
                </div>
                <p class="card-text">{{this.description}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div id="form-modals">
    <div class="modal fade text-dark" id="post-review" tabindex="-1" aria-labelledby="postReviewLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title" id="postReviewLabel">Post Review</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    {{> reviews-new-form}}
                </div>
            </div>
        </div>
    </div>
</div>